<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com">
    </script>
  </head>

  <body class="bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <div class="relative min-h-[70vh] flex items-center justify-center text-center px-4 overflow-hidden">
      <!-- Background image with overlay -->
      <div class="absolute inset-0">
        <img
          src={~p"/images/final/pooltabletop.jpg"}
          alt="Pool table background"
          class="w-full h-full object-cover object-center brightness-110"
        />
        <!-- Overlay for better text contrast -->
        <div class="absolute inset-0 bg-black/20 dark:bg-black/30"></div>
      </div>

<!-- Content container -->
      <div class="relative max-w-4xl mx-auto text-gray-100 dark:text-gray-100 px-4">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 drop-shadow-md">
          Elevate Your <span class="text-gray-300 dark:text-gray-300">Pool Game</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 drop-shadow-md">
          Master techniques, explore rules, and join the competitive scene
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href={~p"/tutorials"}
            class="bg-white/90 hover:bg-white dark:bg-gray-800/90 dark:hover:bg-gray-700 text-gray-800 dark:text-white px-8 py-3 rounded-lg text-lg font-semibold transition-all backdrop-blur-sm"
          >
            Start Learning
          </a>
          <a
            href={~p"/tournaments"}
            class="bg-white/90 hover:bg-white dark:bg-gray-800/90 dark:hover:bg-gray-700 text-gray-800 dark:text-white px-8 py-3 rounded-lg text-lg font-semibold transition-all backdrop-blur-sm"
          >
            Find Tournaments
          </a>
        </div>
      </div>
    </div>

<!-- ===== GENERAL SECTION ===== -->
    <div class="bg-gray-100 dark:bg-gray-800 py-16 px-4">
      <!-- Changed background to match hero -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white dark:bg-gray-900 p-8 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
          <!-- Added box container -->
          <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-gray-100">
            <span class="border-b-4 border-gray-800 dark:border-gray-200 pb-2">General</span>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div>
              <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">
                About Cuesphere
              </h3>
              <p class="text-gray-700 dark:text-gray-300 mb-6">
                Discover the story behind this platform, explore player ratings, and shop for equipment.
              </p>
              <div class="grid grid-cols-2 gap-4">
                <%= for item <- [
              %{title: "About", href: ~p"/about", icon: "â„¹ï¸"},
              %{title: "Fargo Rates", href: ~p"/fargo-rate", icon: "ðŸ“Š"},
              %{title: "Facts", href: ~p"/facts", icon: "ðŸ”"},
              %{title: "Purchase Gear", href: ~p"/purchase", icon: "ðŸ›’"}
            ] do %>
                  <a
                    href={item.href}
                    class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm hover:shadow-md transition-all text-gray-900 dark:text-gray-100 border border-gray-200 dark:border-gray-700"
                  >
                    <div class="text-2xl mb-2">{item.icon}</div>
                    <h4 class="font-semibold">{item.title}</h4>
                  </a>
                <% end %>
              </div>
            </div>
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
              <img
                src={~p"/images/final/poolballs.webp"}
                alt="Pool balls on a blue cloth pool table"
                class="w-full h-auto rounded-lg"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ===== LEARN SECTION ===== -->
    <div class="bg-gray-100 dark:bg-gray-800 py-16 px-4">
      <!-- Changed background to match hero -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white dark:bg-gray-900 p-8 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
          <!-- Added box container -->
          <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-gray-100">
            <span class="border-b-4 border-gray-800 dark:border-gray-200 pb-2">Learn</span>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <%= for item <- [
          %{title: "Tutorials", desc: "Beginner-friendly guides.", href: ~p"/tutorials", icon: "ðŸŽ¯"},
          %{title: "Drills", desc: "Advanced skill builders.", href: ~p"/drills", icon: "â±ï¸"},
          %{title: "Books & Movies", desc: "Strategy resources.", href: ~p"/books", icon: "ðŸ“š"}
        ] do %>
              <a
                href={item.href}
                class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md hover:shadow-lg transition-all hover:-translate-y-1 text-gray-900 dark:text-gray-100 border border-gray-200 dark:border-gray-700"
              >
                <div class="text-4xl mb-4">{item.icon}</div>
                <h3 class="text-xl font-bold mb-2">{item.title}</h3>
                <p class="text-gray-600 dark:text-gray-400">{item.desc}</p>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- ===== PLAY SECTION ===== -->
    <div class="bg-gray-100 dark:bg-gray-800 py-16 px-4 pb-24">
      <!-- Changed background to match hero -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white dark:bg-gray-900 p-8 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
          <!-- Added box container -->
          <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-gray-100">
            <span class="border-b-4 border-gray-800 dark:border-gray-200 pb-2">Play</span>
          </h2>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700">
            <div class="grid grid-cols-1 md:grid-cols-2">
              <div class="p-8">
                <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">
                  Ready to Play?
                </h3>
                <ul class="space-y-4 mb-6 text-gray-700 dark:text-gray-300">
                  <li class="flex items-start">
                    <div class="text-gray-800 dark:text-gray-200 mr-3">âœ“</div>
                    <span>
                      Master the <a href={~p"/rules"} class="hover:underline">rules</a>
                      of 8-ball, 9-ball, and more.
                    </span>
                  </li>
                  <li class="flex items-start">
                    <div class="text-gray-800 dark:text-gray-200 mr-3">âœ“</div>
                    <span>
                      Explore <a href={~p"/games"} class="hover:underline">game variations</a>.
                    </span>
                  </li>
                  <li class="flex items-start">
                    <div class="text-gray-800 dark:text-gray-200 mr-3">âœ“</div>
                    <span>
                      Join <a href={~p"/leagues"} class="hover:underline">leagues</a>
                      or <a href={~p"/tournaments"} class="hover:underline">tournaments</a>.
                    </span>
                  </li>
                </ul>
                <a
                  href={~p"/games"}
                  class="bg-gray-300 hover:bg-gray-400 dark:bg-gray-700 dark:hover:bg-gray-600 text-black dark:text-white px-8 py-3 rounded-lg text-lg font-semibold transition-all"
                >
                  Browse Games
                </a>
              </div>
              <div class="bg-gray-200 dark:bg-gray-700 flex items-center justify-center p-8">
                <img
                  src={~p"/images/final/poolballs2.png"}
                  alt="Pool balls on a blue cloth pool table"
                  class="w-full h-auto rounded-lg shadow-sm"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
