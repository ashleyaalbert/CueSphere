<.header>
  {gettext("Page")} {@page.id || "New"}
  <:subtitle>{gettext("This is a page record from your database.")}</:subtitle>
  <:actions>
    <.link patch={~p"/topics/#{@topic.slug}/pages/#{@page.id || :new}/edit"} phx-click={JS.push_focus()}>
      <.button color="alternative">{gettext("Edit page")}</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title={gettext("Content")}>{@page.content}</:item>
  <:item title={gettext("Tags")}>
    <div class="flex space-x-2">
      <%= for tag <- @page.tags do %>
        <.badge large>
          <%= tag.name %>
        </.badge>
      <% end %>
    </div>
  </:item>
</.list>

<.back navigate={~p"/topics/#{@topic.slug}/pages"}>{gettext("Back to pages")}</.back>

<.modal
  id="page-modal"
  :if={@live_action == :edit}
  show
  on_cancel={JS.patch(~p"/topics/#{@topic.slug}/pages/#{@page.id}")}
>
  <.live_component
    module={AppWeb.PageLive.FormComponent}
    id={@page.id || :new}
    title={@page_title}
    action={@live_action}
    page={@page}
    patch={~p"/topics/#{@topic.slug}/pages/#{@page.id || :new}"}
  />
</.modal>
